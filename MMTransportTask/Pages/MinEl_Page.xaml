<Page x:Class="MMTransportTask.Pages.MinEl_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MMTransportTask.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Метод минимальных элементов">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Количество строк:"/>
            <TextBox Name="RowsInput" Width="50"/>
            <TextBlock Text="Количество столбцов:"/>
            <TextBox Name="ColumnsInput" Width="50"/>
            <Button Content="Создать таблицу" Click="CreateTableButton_Click" Margin="5"/>
            <Button x:Name="check" Content="Расчитать" Click="check_Click"/>

            <ItemsControl Name="TableItems" Margin="0,10,0,0"/>
            <TextBox Name="result" HorizontalAlignment="Stretch"/>
        </StackPanel>
    </Grid>
</Page>
