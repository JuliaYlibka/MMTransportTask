<Page x:Class="MMTransportTask.Pages.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MMTransportTask.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Меню">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="But_SZY" Grid.Row="1"  Content="Начать" HorizontalAlignment="Center" Margin="0,10,0,0" Width="300" VerticalAlignment="Top" Click="But_SZY_Click" />
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="18" Margin="0,27,0,0" TextWrapping="Wrap" Text="Добро пожаловать!" VerticalAlignment="Top"/>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" Margin="0,92,0,0" TextWrapping="Wrap" Text="Данное приложение поможет вам в построении опорных планов для транспортных задач." VerticalAlignment="Top"/>
    </Grid> 
</Page>
